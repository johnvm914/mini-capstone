<h1><%= header %></h1>
<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this article from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag url, method: method_variable do %>
  
  <div>
    <label for=""> Name </label>
    <input type="text" name="name" value="<%= @product.name %>">
  </div>

  <div>
    <label for=""> Price </label>
    <input type="text" name="price" value="<%= @product.price %>">
  </div>

  <div>
    <label for=""> Image url </label>
    <input type="text" name="image" value="<%= @product.images.last %>" >
  </div>
  
  <div>
    <label for=""> Description </label>
    <input type="text" name="description" value="<%= @product.description %>">
  </div>

  <div>
    <label for=""> Supplier id </label>
    <select name="supplier_id">
      <% Supplier.all.each do |supplier| %>
        <option value="<%= supplier.id %>" class="black_text"><%= supplier.name %></option>
      <% end %>
    </select>
  </div>

  <div>
    <input type="submit" value="Submit">
  </div>

<% end %>